<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="20dip" android:bottomLeftRadius="20dip" />
            <stroke android:width="4dip" android:color="@color/MyYellow"/>
            <solid android:color="@color/MyYellow"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="20dip" android:bottomLeftRadius="20dip"/>
            <stroke android:width="4dip" android:color="@color/MyYellow"/>
            <solid android:color="@color/MyYellow"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="20dip" android:bottomLeftRadius="20dip"/>
            <stroke android:width="0dip" android:color="@color/MyYellow"/>
            <solid android:color="@color/MyYellow"/>
        </shape>
    </item>
</selector>