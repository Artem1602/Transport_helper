<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="20dip" android:bottomRightRadius="20dip" />
            <stroke android:width="4dip" android:color="#f5bd1f"/>
            <solid android:color="#f5bd1f"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="20dip" android:bottomRightRadius="20dip"/>
            <stroke android:width="10dip" android:color="#f5bd1f"/>
            <solid android:color="#f5bd1f"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topRightRadius="20dip" android:bottomRightRadius="20dip"/>
            <stroke android:width="0dip" android:color="#f5bd1f"/>
            <solid android:color="#f5bd1f"/>
        </shape>
    </item>
</selector>