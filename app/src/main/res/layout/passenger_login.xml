<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ECEEF2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:paddingTop="121dp"
            android:text="Ваші дані:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:textStyle="normal" />
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:paddingTop="180dp"
       android:orientation="vertical"
       tools:ignore="MissingConstraints">

       <EditText
           android:id="@+id/name_str"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/edit_field"
           android:fontFamily="@font/open_sans"
           android:hint="@string/user_name"
           android:lines="1"
           android:maxLength="20"
           android:singleLine="true"
           android:textAlignment="center"
           android:textSize="27sp" />

       <EditText
           android:id="@+id/number_str"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/edit_field"
           android:fontFamily="@font/open_sans"
           android:hint="@string/number_example"

           android:inputType="phone|number"
           android:lines="1"
           android:maxLength="13"
           android:maxLines="1"
           android:singleLine="true"
           android:textAlignment="center"
           android:textSize="27sp" />

       <EditText
           android:id="@+id/address_str"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/edit_field"
           android:fontFamily="@font/open_sans"
           android:hint="@string/address"
           android:lines="1"
           android:maxLines="1"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:singleLine="true"
           android:textAlignment="center"
           android:textSize="27sp" />
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"

        android:paddingTop="440dp"
        android:paddingRight="15dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/set_place_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/button_set_psg"
            android:fontFamily="@font/open_sans"
            android:text="Продовжити"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>