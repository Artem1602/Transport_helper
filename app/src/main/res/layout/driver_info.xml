<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ECEEF2"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/info"
                android:textAlignment="center"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/blue_marker"
                android:layout_width="400px"
                android:layout_height="400px"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/blue_marker" />

            <TextView
                android:id="@+id/blue_marker_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="@string/blue_marker"
                android:layout_marginBottom="20dp"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/red_marker"
                android:layout_width="400px"
                android:layout_height="400px"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/red_marker" />

            <TextView
                android:id="@+id/red_marker_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:text="@string/red_marker"

                android:textSize="18sp" />

            <Button
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_set_psg"
                android:text="@string/back" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>