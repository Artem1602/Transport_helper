<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ua.study.transporthelper"
    tools:ignore="GoogleAppIndexingWarning,LockedOrientationActivity">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/icona"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icona"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activity.Driver.Driver_map_activity"
            android:label="@string/Map"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activity.Passanger.Psg_map_activity"
            android:label="@string/Map"
            android:screenOrientation="portrait"/>

        <activity android:name=".Shared_preferences"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Login_activity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.Passanger.Psg_login_activity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.Passanger.Psg_wait_activity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.People.People_login"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.Driver.Drv_info_activity"
            android:screenOrientation="portrait"/>

    </application>
</manifest>